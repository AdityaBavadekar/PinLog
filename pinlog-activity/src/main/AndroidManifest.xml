<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.adityaamolbavadekar.pinlogactivity">

    <application>

        <activity
            android:name="com.adityaamolbavadekar.pinlogactivity.PinLogDebugActivity"
            android:banner="@drawable/ic_logo"
            android:icon="@drawable/ic_logo"
            android:label="PinLog"
            android:theme="@style/PinLogDebugActivity"
            tools:targetApi="lollipop" />

        <activity-alias
            android:name="com.adityaamolbavadekar.pinlogactivity.PinLogDebugLauncher"
            android:banner="@drawable/ic_logo"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_logo"
            android:label="PinLog"
            android:logo="@drawable/ic_logo"
            android:targetActivity="com.adityaamolbavadekar.pinlogactivity.PinLogDebugActivity"
            tools:targetApi="lollipop">

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity-alias>


    </application>

</manifest>