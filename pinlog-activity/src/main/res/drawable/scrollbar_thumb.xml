<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="translucent">

    <item android:height="40dp">

        <layer-list>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?attr/colorScrollbar" />
                    <corners android:radius="30dp" />
                    <size
                        android:width="40dp"
                        android:height="40dp" />
                </shape>
            </item>

            <item
                android:bottom="5dp"
                android:drawable="@drawable/ic_left"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

        </layer-list>

    </item>


</layer-list>